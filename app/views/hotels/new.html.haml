%div.article__center
  %p Add new hotel
%div.form-container__hotels
  = simple_form_for (@hotel) do |f|
    =f.input :title, :label => 'Title', :class => 'article_center'
    =f.input :rating, :label => 'Rating'
    =f.input :breakfast_included, as: :radio_buttons, collection: ['With','Without'], :checked => ['Without', true], :label => 'Breakfast'
    =f.input :price, :label => 'Price'
    =f.input :address, :label => 'Address'
    =f.input :room_description, :as => 'text', :label => 'Room description', :input_html => {:style => 'resize:none'}
    =f.input :photo, :as => 'file', :label =>'Add photo'
    =f.button :submit, :value => 'Add hotel'
  %p= link_to 'Back', current_user